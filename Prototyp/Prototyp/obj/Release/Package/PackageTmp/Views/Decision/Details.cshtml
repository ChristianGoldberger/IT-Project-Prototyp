
@{
	ViewBag.Title = "Details";
}

@using Helper;

@{
	var host = System.Web.HttpContext.Current.Request.Url.Host;
}

<head>
	<link rel="stylesheet" type="text/css" href="~/Content/TableStyle.css">
</head>

<fieldset style="margin-top: 10px">
	<legend>Details</legend>
	<table class="table table-striped table-hover">
		@*<table class="blueTable">*@
		<thead>
			<tr>
				<th scope="col">Frage</th>
				<th scope="col">Wertung</th>
				<th scope="col">Anmerkung</th>
			</tr>
		</thead>
		<tbody>
			@{
				foreach (var answer in ViewBag.Answers)
				{
					<tr>
						<td>@answer.Text</td>
						<td>@answer.Rating</td>
						<td>@answer.Annotation</td>
						@*<td>@answer.Effect</td>*@
					</tr>
				}
			}
		</tbody>
	</table>
	<button class="btn btn-primary" onclick="location.href='@Url.Action("Show", "Decision")';return false;">Zurück</button>
</fieldset>

@section scripts
{
	<script src="~/Scripts/decision.js" type="text/javascript"></script>
}
