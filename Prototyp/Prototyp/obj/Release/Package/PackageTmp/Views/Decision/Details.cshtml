
@model Helper.Decision
@{
    /**/

    ViewBag.Title = "Details";
}
@using Helper;
@{
    var host = System.Web.HttpContext.Current.Request.Url.Host;
}
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/TableStyle.css">
</head>
<fieldset style="margin-top: 10px">
    <legend>Details</legend>
    <table class="table table-striped table-hover">
        @*<table class="blueTable">*@
        <thead>
            <tr>
                <th scope="col">Frage</th>
                <th scope="col">Wertung</th>
                <th scope="col">Anmerkung</th>

            </tr>
        </thead>
        <tbody>
            @{
                foreach (var answer in ViewBag.QuestionAnswer)
                {
                    <tr>

                        <td>@answer.QuestionKey</td>
                        <td>@answer.Rating</td>
                        <td>@answer.Arguments</td>

                    </tr>
                }
            }
        </tbody>
    </table>

</fieldset>

@using (Html.BeginForm("DetailsPerformed", "Decision", FormMethod.Post, new { id = ViewBag.ID }))
{
    if (ViewBag.ActualPerformance == 0)
    {


        <form class="form-horizontal">
            <fieldset style="margin-top: 10px">
                Empfehlung: Dem Bauchgefühl kann vertraut werden!<br />

                <label for="headerline" class="control-label">Tatsächliche Performance:  </label>

                <div class="form-group" id="actualPerformance" style="margin-left:0px;margin-right:0px">
                    <div class="row">
                        <div class="col-sm-2 col-lg-2">
                            <label for="actualPerformance" class="control-label">ActualPerformance</label>
                        </div>
                        <div class="col-sm-10 col-lg-10">
                            <div id="weight" runat="server" ClientIDMode="Static">
                                
                                <input type="radio" id="decision1" name="Entscheidung" value="1" runat="server" ClientIDMode="Static">
                                <label for="Radio1"> 1</label>
                                <input type="radio" id="decision2" name="Entscheidung" value="2" runat="server" ClientIDMode="Static">
                                <label for="Radio2"> 2</label>
                                <input type="radio" id="decision3" name="Entscheidung" value="3" runat="server" ClientIDMode="Static">
                                <label for="Radio3">3</label>
                                <input type="radio" id="decision4" name="Entscheidung" value="4" runat="server" ClientIDMode="Static">
                                <label for="Radio4">4</label>
                                <input type="radio" id="decision5" name="Entscheidung" value="5" runat="server" ClientIDMode="Static">
                                <label for="Radio5">5</label>
                                <input type="radio" id="decision6" name="Entscheidung" value="6" runat="server" ClientIDMode="Static">
                                <label for="Radio">6</label>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-sm-2 col-lg-2">
                        <button class="btn btn-primary" onclick="location.href='@Url.Action("Show", "Decision")';return false;">Zurück</button>
                        @*<button class="btn btn-primary" onclick="location.href='@Url.Action("DetailsPerformed", new { controller = "Decision", id = ViewBag.ID })';return false;">Speichern</button>*@
                        <input type="submit" value="Speichern" class="btn btn-primary" />
                    </div>
                </div>
            </fieldset>
        </form>

    }
     else

    {

        <form class="form-horizontal">
            <fieldset style="margin-top: 10px">
                Empfehlung: Dem Bauchgefühl kann vertraut werden!<br />

                <label for="headerline" class="control-label">Tatsächliche Performance: @ViewBag.Decision.ActualPerformance</label>

              

                <div class="row">
                    <div class="col-sm-2 col-lg-2">
                        <button class="btn btn-primary" onclick="location.href='@Url.Action("Show", "Decision")';return false;">Zurück</button>
                        @*<button class="btn btn-primary" onclick="location.href='@Url.Action("DetailsPerformed", new { controller = "Decision", id = ViewBag.ID })';return false;">Speichern</button>*@
                       
                    </div>
                </div>
            </fieldset>
        </form>

        


    }


}


@section scripts
{

    <script src="~/Scripts/decision.js" type="text/javascript"></script>
}
