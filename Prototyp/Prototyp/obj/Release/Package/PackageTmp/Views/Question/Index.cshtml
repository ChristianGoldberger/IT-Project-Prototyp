@{
    ViewBag.Title = "Questions";
}

<h2>Questions</h2>
<br />
<a href="@Url.Action("Edit", new { controller = "Question"})">New question</a>
<br />
<br />
<table id="tschemata" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Question</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var q in ViewBag.Questions)
        {
        <tr>
            <td>
                @q.Text
            </td>
            <td>
                <a href="@Url.Action("Edit", new { controller = "Question", id = q.Key })">Edit</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<br />