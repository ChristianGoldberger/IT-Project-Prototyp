﻿
@{
    ViewBag.Title = "Details";
}
@using Helper;
@{
    var host = System.Web.HttpContext.Current.Request.Url.Host;
}
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/TableStyle.css">
</head>
<fieldset style="margin-top: 10px">
    <legend>Details</legend>
    <table class="table table-striped table-hover">
        @*<table class="blueTable">*@
        <thead>
            <tr>
                <th scope="col">Frage</th>
                <th scope="col">Wertung</th>
                <th scope="col">Anmerkung</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var answer in ViewBag.QuestionAnswer)
                {
                    <tr>

                        <td>@answer.QuestionKey</td>
                        <td>@answer.Rating</td>
                        <td>@answer.Arguments</td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <button class="btn btn-primary" onclick="location.href='@Url.Action("Show", "Decision")';return false;">Zurück</button>
</fieldset>
    @using (Html.BeginForm("CheckRadioActualPerformance", "Decision"))
    {

        <fieldset style="margin-top: 10px">
            <form class="form-horizontal">
                Empfehlung: Dem Bauchgefühl kann vertraut werden!<br />
                <label for="actualPerformance" class="control-label">Tatsächliche Performance:</label>
                <div class="form-group" id="titleForm" style="margin-left:0px;margin-right:0px">
                    <div class="row">
                        <div class="col-sm-1 col-lg-1">
                        </div>

                        <input type="radio" checked id="performance1" name="ActualPerformance" value="1" runat="server" ClientIDMode="Static">
                        <label for="Radio1"> 1</label>
                        <input type="radio" id="performance2" name="ActualPerformance" value="2" runat="server" ClientIDMode="Static">
                        <label for="Radio2"> 2</label>
                        <input type="radio" id="performance3" name="ActualPerformance" value="3" runat="server" ClientIDMode="Static">
                        <label for="Radio3">3</label>
                        <input type="radio" id="performance4" name="ActualPerformance" value="4" runat="server" ClientIDMode="Static">
                        <label for="Radio4">4</label>
                        <input type="radio" id="performance5" name="ActualPerformance" value="5" runat="server" ClientIDMode="Static">
                        <label for="Radio5">5</label>
                        <input type="radio" id="performance6" name="ActualPerformance" value="6" runat="server" ClientIDMode="Static">
                        <label for="Radio">6</label>


                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-2 col-lg-2">
                        <button class="btn btn-primary" onclick="location.href='@Url.Action("Show", "Decision")';return false;">Zurück</button>
                        <input type="submit" value="Speichern" class="btn btn-primary" />
                    </div>
                </div>
            </form>

        </fieldset>
    }


    @section scripts
{
        <script src="~/Scripts/decision.js" type="text/javascript"></script>
    }
