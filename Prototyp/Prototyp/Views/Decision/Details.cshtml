
@{
    ViewBag.Title = "Details";
}

@using Helper;

@{
    var host = System.Web.HttpContext.Current.Request.Url.Host;
}

<head>
    <link rel="stylesheet" type="text/css" href="~/Content/TableStyle.css">
</head>

<fieldset style="margin-top: 10px">
    <legend>Details</legend>
    <table class="table table-striped table-hover">
        @*<table class="blueTable">*@
        <thead>
            <tr>
                <th scope="col">Frage</th>
                <th scope="col">Wertung</th>
                <th scope="col">Anmerkung</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var answer in ViewBag.Answers)
                {
                    <tr>
                        <td>@answer.Text</td>
                        <td>@answer.Rating</td>
                        <td>@answer.Annotation</td>
                        @*<td>@answer.Effect</td>*@
                    </tr>
                }
            }
        </tbody>
    </table>


    <button class="btn btn-primary" onclick="location.href='@Url.Action("Show", "Decision")';return false;">Zurück</button>
</fieldset>

<form class="form-horizontal">
    <fieldset style="margin-top: 10px">

        Empfehlung: Dem Bauchgefühl kann vertraut werden!<br />
        <label for="title" class="control-label">Tatsächliche Performance:</label>
        <div class="form-group" id="titleForm" style="margin-left:0px;margin-right:0px">
            <div class="row">
                <div class="col-sm-1 col-lg-1">

                </div>
                <div class="col-sm-10 col-lg-10">
                    <div id="weight">
                        <input type="radio" checked id="performance1" name="Performance" value="1">
                        <label for="Radio1"> 1</label>
                        <input type="radio" id="performance2" name="Performance" value="2">
                        <label for="Radio2"> 2</label>
                        <input type="radio" id="performance3" name="Performance" value="3">
                        <label for="Radio3">3</label>
                        <input type="radio" id="performance4" name="Performance" value="4">
                        <label for="Radio4">4</label>
                        <input type="radio" id="performance5" name="Performance" value="5">
                        <label for="Radio5">5</label>
                        <input type="radio" id="performance6" name="Performance" value="6">
                        <label for="Radio">6</label>
                    </div>
                </div>
            </div>
        </div>

    </fieldset>
</form>

@section scripts
{
    <script src="~/Scripts/decision.js" type="text/javascript"></script>
}
