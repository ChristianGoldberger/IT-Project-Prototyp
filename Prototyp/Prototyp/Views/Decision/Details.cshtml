
@{
	ViewBag.Title = "Details";
}

@using Helper;

@{
	var host = System.Web.HttpContext.Current.Request.Url.Host;
}

<head>
	<link rel="stylesheet" type="text/css" href="~/Content/TableStyle.css">
</head>

<fieldset style="margin-top: 10px">
	<legend>Details</legend>
	<table class="table table-striped table-hover">
		@*<table class="blueTable">*@
		<thead>
			<tr>
				<th scope="col">Key</th>
				<th scope="col">Bemerkungen</th>
				<th scope="col">Tatsächliche Wertung</th>
			</tr>
		</thead>
		<tbody>
			@{
				foreach (QuestionAnswer answer in ViewBag.Decisions.Answers)
				{
					<tr>
						<td>@answer.QuestionKey</td>
						<td>@answer.Arguments</td>
						<td>@answer.Rating</td>
					</tr>
				}
			}
		</tbody>

	</table>
</fieldset>

@section scripts
{
	<script src="~/Scripts/decision.js" type="text/javascript"></script>
}
