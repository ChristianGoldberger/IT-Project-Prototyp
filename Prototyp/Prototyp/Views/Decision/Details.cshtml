
@model Helper.Decision
@{
    ViewBag.Title = "Details";
}
@using Helper;
@{
    var host = System.Web.HttpContext.Current.Request.Url.Host;
}
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/TableStyle.css">
</head>
<fieldset style="margin-top: 10px">
    <legend>Details</legend>
    <table class="table table-striped table-hover">
        @*<table class="blueTable">*@
        <thead>
            <tr>
                <th scope="col">Frage</th>
                <th scope="col">Wertung</th>
                <th scope="col">Anmerkung</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var answer in ViewBag.QuestionAnswer)
                {
                    <tr>

                        <td>@answer.QuestionKey</td>
                        <td>@answer.Rating</td>
                        <td>@answer.Arguments</td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <button class="btn btn-primary" onclick="location.href='@Url.Action("Show", "Decision")';return false;">Zurück</button>
</fieldset>



    @using (Html.BeginForm("DetailsPerformed", "Decision", FormMethod.Post))
    {

        <form class="form-horizontal">
            <fieldset style="margin-top: 10px">
                Empfehlung: Dem Bauchgefühl kann vertraut werden!<br />

                <label for="headerline" class="control-label">Tatsächliche Performance:</label>

                <div class="form-group" id="actualPerformance" style="margin-left:0px;margin-right:0px">
                    <div class="row">
                        <div class="col-sm-2 col-lg-2">
                            <label for="actualPerformance" class="control-label">ActualPerformance</label>
                        </div>

                        <div class="col-sm-10 col-lg-10">
                            @Html.TextAreaFor(model => model.ActualPerformance, new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ActualPerformance)


                        </div>
                        <div class="col-sm-10 col-lg-10">
                            <div class="radio">
                                <label>
                                    @Html.RadioButtonFor(m => m.ActualPerformance, 1)
                                   1
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    @Html.RadioButtonFor(m => m.ActualPerformance, 2)
                                    2
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    @Html.RadioButtonFor(m => m.ActualPerformance, 3)
                                    3
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    @Html.RadioButtonFor(m => m.ActualPerformance, 4)
                                    4
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    @Html.RadioButtonFor(m => m.ActualPerformance, 5)
                                    5
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    @Html.RadioButtonFor(m => m.ActualPerformance, 6)
                                    6
                                </label>
                            </div>
                            @Html.ValidationMessageFor(model => model.ActualPerformance)

                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-2 col-lg-2">
                        <button class="btn btn-primary" onclick="location.href='@Url.Action("Show", "Decision")';return false;">Zurück</button>
                        <input type="submit" value="Speichern" class="btn btn-primary" />
                    </div>
                </div>
            </fieldset>
        </form>


}


@section scripts
{

    <script src="~/Scripts/decision.js" type="text/javascript"></script>
}
