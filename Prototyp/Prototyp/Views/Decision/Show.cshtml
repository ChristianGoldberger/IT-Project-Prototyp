﻿@model Helper.Decision
@{
    ViewBag.Title = "Entscheidungen";
}
@using Helper;
@{
    var host = System.Web.HttpContext.Current.Request.Url.Host;
}
@*<head>
        <link rel="stylesheet" type="text/css" href="~/Content/TableStyle.css">
    </head>*@
<fieldset style="margin-top: 10px">
    <legend>Entscheidungen</legend>
    <table class="table table-striped table-hover">
        @*<table class="blueTable">*@
        <thead>
            <tr>
                <th scope="col">Titel</th>
                <th scope="col">Beschreibung</th>
                <th scope="col">Actual Performance</th>
                <th scope="col">Datum</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (Decision decision in ViewBag.Decisions)
                {
                    <tr>
                        <td>@decision.Title</td>
                        <td>@decision.Description</td>
                        <td>@decision.ActualPerformance</td>
                            <td>@decision.DecisionEntered</td>
                        <td><a class="btn btn-primary" style="float:right;margin-left:5px; margin-bottom:2px; height:40px;width:80px" href="@Url.Action("Details", new { controller = "Decision", id = decision.Id})">Details</a></td>
                    </tr>
                }

            }
        </tbody>
    </table>
    @using (Html.BeginForm("Upload", "Decision", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row">
            <div class="col-lg-6 col-sm-6">
                <input type="file" name="file" style="float:left; margin-right:15px; margin-top:5px;" class="btn btn-primary" />
                <input type="submit" name="Submit" id="Submit" value="Upload" class="btn btn-primary" style="float:left; margin-right:15px; margin-top:5px;" />
                <input type="button" class="btn btn-primary" value="Download XML File" style="margin-top:5px;" onclick="location.href='@Url.Action("DownloadFile", "Decision")'" />
            </div>
        </div>

    }

    @*<a class="btn btn-primary" style="float:right;margin-left:5px; margin-bottom:2px; height:40px;width:80px" href="@Url.Action("Edit", new { controller = "Decision", id = q.Key })">Ändern</a>
        <a class="btn btn-danger" style="float:right;height:40px;width:80px" href="@Url.Action("Delete", new { controller = "Decision", id = q.Key })">Löschen</a>*@

</fieldset>
@section scripts
{
    <script src="~/Scripts/decision.js" type="text/javascript"></script>
}