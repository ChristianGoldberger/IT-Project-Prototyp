@{
    ViewBag.Title = "Home Page";
}
<fieldset style="margin-top: 10px">
    <legend>Entscheidungen</legend>
    <a class="btn btn-primary" style="margin-bottom:5px" href="@Url.Action("Index", new { controller = "Decision"})">Neue Entscheidung</a>
    <table id="questionTable" class="table table-striped table-hover">
        <tbody>
            @foreach (var q in ViewBag.Decisions)
            {

                <tr>
                    <td id="@q.Id">
                        <b>Titel: </b>
                        @q.Title
                        <b>Beschreibung: </b>
                        @q.Description

                    </td>
                    <td>

                        <a class="btn btn-danger" style="float:right;height:40px;width:80px" href="@Url.Action("Delete", new { controller = "Decision", id = q.Id })">Löschen</a>

                    </td>
                </tr>








            }
        </tbody>
    </table>
</fieldset>
@section scripts
{
    <script src="~/Scripts/question.js" type="text/javascript"></script>
}
