@model Helper.Decision

@{
	ViewBag.Title = "Neue Entscheidung";
}

<form class="form-horizontal">
	<fieldset style="margin-top: 10px">
		<legend>Neue Entscheidung erstellen</legend>
		<div class="form-group" id="titleForm" style="margin-left:0px;margin-right:0px">
			<div class="row">
				<div class="col-sm-2 col-lg-2">
					<label for="title" class="control-label">Titel</label>
				</div>
				<div class="col-sm-10 col-lg-10">
					<input tpye="text" class="form-control" id="title" />
				</div>
			</div>
		</div>
		<div class="form-group" id="descriptionForm" style="margin-left:0px;margin-right:0px">
			<div class="row">
				<div class="col-sm-2 col-lg-2">
					<label for="description" class="control-label">Beschreibung</label>
				</div>
				<div class="col-sm-10 col-lg-10">
					<textarea class="form-control" rows="3" id="description"> </textarea>
				</div>
			</div>
		</div>
		
		<div class="row">
			<div class="col-sm-5 col-lg-5">
				<button id="btnSave"class="btn btn-primary">Speichern</button>
			</div>
		</div>
	</fieldset>
</form>



