﻿@model PagedList.IPagedList<Helper.QuestionAnswer>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Enter new decision";
}
@using (Html.BeginForm("CheckRadio", "Decision", FormMethod.Post))
{
    <!-- Radio buttons platzieren etc.. -->


    <form class="form-horizontal" runat="server" ClientIDMode="Static">
        <fieldset style="margin-top: 10px">
            <div id="questionKey">@ViewBag.myQ.QuestionKey</div>
            <legend>@ViewBag.myQ.QuestionKey (1=wenig, 6=viel)</legend>
            <br>
            <div class="form-group" id="titleForm" style="margin-left:0px;margin-right:0px">
                <div class="row">
                    <div class="col-sm-2 col-lg-2">
                        <label for="title" class="control-label">Gewichtung:</label>
                    </div>
                    <div class="col-sm-10 col-lg-10">
                        <div id="weight" runat="server" ClientIDMode="Static">

                            <input type="radio" checked id="decision1" name="Entscheidung" value="1" runat="server" ClientIDMode="Static">
                            <label for="Radio1"> 1</label>
                            <input type="radio" id="decision2" name="Entscheidung" value="2" runat="server" ClientIDMode="Static">
                            <label for="Radio2"> 2</label>
                            <input type="radio" id="decision3" name="Entscheidung" value="3" runat="server" ClientIDMode="Static">
                            <label for="Radio3">3</label>
                            <input type="radio" id="decision4" name="Entscheidung" value="4" runat="server" ClientIDMode="Static">
                            <label for="Radio4">4</label>
                            <input type="radio" id="decision5" name="Entscheidung" value="5" runat="server" ClientIDMode="Static">
                            <label for="Radio5">5</label>
                            <input type="radio" id="decision6" name="Entscheidung" value="6" runat="server" ClientIDMode="Static">
                            <label for="Radio">6</label>


                        </div>


                    </div>
                </div>
				<div class="row">
					<div class="col-sm-2 col-lg-2">
						<label for="title" class="control-label">Anmerkung:</label>

					</div>
					<div class="col-sm-5 col-lg-5">
						<input class="form-control text-box single-line" data-val="true" data-val-required="Bitte fügen Sie ein Argument ein!" id="Argument" name="TextFeldArgument" type="text" value="">

					</div>
				</div>
				<div class="row" style="margin-top:5px">
					<input type="submit" name="Speichern" class="btn btn-primary" style="margin-left:15px; margin-top:5px" />
				</div>
            </div>
        </fieldset>
    </form>





    <!-- Conditionally display Sign In or Sign Out -->


    <!-- <a id="decisionClick" class="btn btn-primary" style="margin-bottom:5px" href="@Url.Action("New", new {q = Model.PageNumber+1})">Speichern</a>-->
    <!--   <a  type="button" class="btn btn-primary" style="margin-top:5px" onclick="saveDecision(@Model.PageNumber)" href="@Url.Action("New", new {q = Model.PageNumber+1})">Speichern</a>-->
    <div class="col-sm-5 col-lg-5">




    </div>

    <!--Question @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount-->
}
@section scripts
{
    <script src="~/Scripts/decisionHandler.js" type="text/javascript"></script>
    <script src="~/Scripts/test.js" type="text/javascript"></script>
}