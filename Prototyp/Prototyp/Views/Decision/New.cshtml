@model PagedList.IPagedList<Helper.QuestionAnswer>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
	ViewBag.Title = "Enter new decision";
}
<!-- Radio buttons platzieren etc.. -->


<form class="form-horizontal">
	<fieldset style="margin-top: 10px">
		<div id="questionKey">@ViewBag.myQ.QuestionKey</div>
		<legend>@ViewBag.myQ.QuestionKey</legend>
		<div class="form-group" id="titleForm" style="margin-left:0px;margin-right:0px">
			<div class="row">
				<div class="col-sm-2 col-lg-2">
					<label for="title" class="control-label">Gewichtung:</label>
				</div>
				<div class="col-sm-10 col-lg-10">
					<div id="weight">
						<input type="radio" checked id="decision1" name="Entscheidung" value="1">
						<label for="Radio1"> 1</label>
						<input type="radio" id="decision2" name="Entscheidung" value="2">
						<label for="Radio2"> 2</label>
						<input type="radio" id="decision3" name="Entscheidung" value="3">
						<label for="Radio3">3</label>
						<input type="radio" id="decision4" name="Entscheidung" value="4">
						<label for="Radio4">4</label>
						<input type="radio" id="decision5" name="Entscheidung" value="5">
						<label for="Radio5">5</label>
						<input type="radio" id="decision6" name="Entscheidung" value="6">
						<label for="Radio">6</label>
					</div>
				</div>
			</div>
			<div class="row"></div>
		</div>

	</fieldset>
</form>

<div class="col-sm-5 col-lg-5">
	<button id="btnSave" class="btn btn-primary">Speichern</button>
</div>

@*Question @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
@(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount*@
@section scripts
{
	<script src="~/Scripts/decisionHandler.js" type="text/javascript"></script>
}